@model AppUser

<style>
    /* Temel stil */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        text-align: initial;
    }

    /* Dropdown içeriği */
    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
        text-align: center;
    }

        /* Dropdown içeriği seçenekleri */
        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            /* Dropdown içeriği seçenekleri üzerine gelindiğinde */
            .dropdown-content a:hover {
                background-color: #f1f1f1;
            }

    /* Dropdown tetikleyici stil */
    .dropdown:hover .dropdown-content {
        display: block;
    }

    /* Ikon stil */
    .icon {
        padding: 15px;
        font-size: 20px;
        cursor: pointer;
    }
</style>

@if (User.Identity.IsAuthenticated)
{
    @if (Model.Status == true)
    {
        <li>
            <a href="/Nutritionist/NutriDashboard/Index">
                <i class="bi bi-person-fill"></i>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                    <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                </svg>
            </a>
        </li>
        <!-- Diyetisyenin login olması halinde yönlendirileceği profil. -->
    }

    @if (Model.Status == false && Model.AppNutriId == null)
    {
        <li>
            <a href="/Member/Dashboard/Index">
                <i class="bi bi-person-fill"></i>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                    <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                </svg>
            </a>
        </li>
        <!-- Kullanıcı girişi. -->
    }

    @if (Model.Status == false && Model.AppNutriId > 0)
    {
        <li class="ml-auto">
            <a href="#" class="smoothScroll" onclick="showSweetAlert()">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-lock" viewBox="0 0 16 16">
                    <path d="M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0M8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4m0 5.996V14H3s-1 0-1-1 1-4 6-4q.845.002 1.544.107a4.5 4.5 0 0 0-.803.918A11 11 0 0 0 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664zM9 13a1 1 0 0 1 1-1v-1a2 2 0 1 1 4 0v1a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1h-4a1 1 0 0 1-1-1zm3-3a1 1 0 0 0-1 1v1h2v-1a1 1 0 0 0-1-1" />
                </svg>
            </a>
        </li>
        <!-- Sertifika bekleyen nutri yönlendirmesi. -->
    }

    @if (Model.Status == false && Model.CertificateImage != null)
    {
        <script>
            function showSweetAlert() {
                Swal.fire("Sertifikanız Onay Bekliyor...");
            }
        </script>
        <!-- Sertifika bekleyen nutri yönlendirmesi. -->
    }

    @if (Model.Status == false && Model.CertificateImage == null && Model.AppNutriId > 0)
    {
        <script>
            function showSweetAlert() {
                Swal.fire("Lütfen Sertifika Yükleyiniz...");
            }
        </script>
    }

    @* <li>

        <a href="/SignIn/LogOut">Çıkış Yap</a>

    </li> *@
}

else
{

    <li class="smoothScroll dropdown ml-auto">
        <div class="dropdown">
            <i class="bi bi-person-fill"></i>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
            </svg>
            <div class="dropdown-content">
                <a href="/SignIn/SignIn">Giriş Yap</a>
                <a href="/Register/SignUp">Kaydol</a>
            </div>
        </div>
    </li>

    <style>
        /* Diğer stiller */
        .ml-auto {
            margin-left: auto !important;
        }
    </style>
}

