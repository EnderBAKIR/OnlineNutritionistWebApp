@model OnlineNutritionistProject.Areas.Member.Models.MemberEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}
<head>
    <style>
        .file-upload {
            position: relative;
            overflow: hidden;
            margin: 10px;
        }

            .file-upload input[type=file] {
                position: absolute;
                top: 0;
                right: 0;
                margin: 0;
                padding: 0;
                font-size: 10px;
                cursor: pointer;
                opacity: 0;
                filter: alpha(opacity=0);
            }

            .file-upload .file-upload-icon {
                display: inline-block;
                padding: 2px 8px;
                cursor: pointer;
                background-color: #00bcd4; /* Turkuaz renk */
                color: #fff;
                border: 1px solid #00bcd4; /* Turkuaz renk */
            }
    </style>
</head>
<div class="content">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card card-user mx-auto">
                <div class="card-header">
                    <h5 class="card-title">Profil Düzenleme Sayfası</h5>
                </div>
                <form method="post" enctype="multipart/form-data">
                    @* multipart/form-data // Profil fotoğraflarımızı kaydetmemizi sağlayacak *@
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-5 pr-1">
                                <div class="form-group">
                                    <label>Kayıt Türü</label>
                                    <input type="text" class="form-control" disabled="" placeholder="Company" value="Kullanıcı">
                                </div>
                            </div>
                            <div class="col-md-3 px-1">
                                <div class="form-group">
                                    @Html.Label("Kullanıcı Adı")
                                    <input type="text" class="form-control" disabled="" placeholder="@ViewBag.userName">

                                </div>
                            </div>
                            <div class="col-md-4 pl-1">
                                <div class="form-group">
                                    <label>Telefon Numarası</label>
                                    <input type="text" asp-for="phonenumber" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 pr-1">
                                <div class="form-group">
                                    <label>İsim</label>
                                    <input type="text" asp-for="name" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    <label>Soyisim</label>
                                    <input type="text" asp-for="surname" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Mail Adresi</label>
                                    <input type="email" asp-for="mail" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 pr-1">
                                <div class="form-group">
                                    <label>Şifre</label>
                                    <input type="text" asp-for="password" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-4 px-1">
                                <div class="form-group">
                                    <label>Şifre Tekrar</label>
                                    <input type="text" asp-for="confirmpassword" class="form-control">
                                </div>
                            </div>
                            <div class="form-group file-upload">
                                <label>Resim Yükle</label>
                                <div class="input-group">
                                    <input type="file" asp-for="Image" class="form-control" />
                                    <span class="file-upload-icon">Dosya Seç</span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Hakkımda</label>
                                    <textarea class="form-control textarea">Diyetisyeninizin sizi daha iyi tanıması için, kendinizden kısaca bahsetmeyi unutmayın...:)</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="update ml-auto mr-auto">
                                <button type="submit" class="btn btn-primary btn-round">Profili Güncelle</button>
                            </div>
                        </div>
                </form>
            </div>

        </div>
    </div>

</div>

