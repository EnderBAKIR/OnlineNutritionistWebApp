@model Comment
@{
    ViewData["Title"] = "EditCommit";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h2>Yorum Güncelleme Sayfası</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="hidden" asp-for="AppUserId" class="form-control" />
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="BlogId" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Yorumu Düzenle")
        <input type="text" asp-for="CommentContent" class="form-control" />
    </div>
    <br />
    <button class="btn btn-outline-primary">Düzenle</button>
</form>