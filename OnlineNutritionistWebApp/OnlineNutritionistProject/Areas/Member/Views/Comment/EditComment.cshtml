@model Comment
@{
    ViewData["Title"] = "EditCommit";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Yorum Güncelleme Sayfası</h4>
                    

                    <form method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <input type="hidden" asp-for="AppUserId" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="hidden" asp-for="BlogId" class="form-control" />
                        </div>
                        <br />
                        <div class="form-group">
                            @Html.Label("Yorumu Düzenle")
                            <textarea asp-for="CommentContent" class="form-control comment-input "> </textarea>
                        </div>
                        <br />
                        <button class="btn btn-outline-primary">Düzenle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var commentInput = document.querySelector(".comment-input");
        commentInput.style.height = "500px"; // Varsayılan yükseklik//Default height
    });
</script>