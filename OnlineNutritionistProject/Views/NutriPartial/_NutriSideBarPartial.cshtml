        <li class="nav-item">
            <a href="/Admin/CertificateStatus" class="nav-link">
                <i class="fas fa-certificate"></i>
                Sertifika Durumu
                <span class="cert-status">
                    @if (User.Identity.IsAuthenticated)
                    {
                    @inject Microsoft.AspNetCore.Identity.UserManager<AppUser> UserManager
                        var user = await UserManager.GetUserAsync(User);

                        if (user.CertificateImage != null)
                        {
                            if (user.Status == false)
                            {
                                <span class="cert-status pend">(Onay Bekliyor)</span>
                            }
                            else
                            {
                                <span class="cert-status appr">(Onaylandı)</span>
                            }
                        }
                        else
                        {
                            <span class="cert-status req">(Zorunlu)</span>
                        }
                    }
                </span>
            </a>
