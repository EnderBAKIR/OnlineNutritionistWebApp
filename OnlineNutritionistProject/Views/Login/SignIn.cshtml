@model UserSignInViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <title>Giriş Yap</title>

    <link href="~/login/css/bootstrap.css" rel="stylesheet" />
    <link href="~/login/css/coming-sssoon.css" rel="stylesheet" />

    <!-- Fonts -->
    <link href="~/http://netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.css" rel="stylesheet">
    <link href='~http://fonts.googleapis.com/css?family=Grand+Hotel' rel='stylesheet' type='text/css'>

    <style>
        body {
            background-image: url('https://www.basic-concept.com/public/images/uploads/types-of-nutrition.jpg');
        }

        .navbar {
            background-color: transparent;
            border: none;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            font-size: 15px;
            color: #fff;
            font-weight: normal;
            width: 10%;
            display: inline-block;
            margin-bottom: 10px;
        }

        .form-control {
            height: 40px;
            padding: 10px;
            font-size: 14px;
            width: 70%;
            box-sizing: border-box;
        }

        .checkbox label {
            font-size: 14px;
            color: #fff;
        }

        .btn-fill {
            height: 40px;
            line-height: 20px;
            width: 70%;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
        }

        .subscribe {
            margin-top: 30px;
        }

        .text-center a {
            color: #fff;
            font-size: 14px;
        }

        .footer {
            color: #fff;
            font-size: 14px;
            margin-top: 50px;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-transparent navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Menüyü Aç/Kapat</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
        </div>
    </nav>

    <div class="main">
        <div class="cover white" data-color="white"></div>
        <div class="container">
            <h1 class="logo" style="font-family: 'Lobster', cursive;">Hoş Geldiniz!</h1>
            <div class="content">
                <div class="subscribe">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                            <form class="form-horizontal" role="form" method="post">
                                <div class="text-center form-control-static">
                                    <label class="col-sm-3 control-label">Kullanıcı Adı:</label>
                                    <div class="col-sm-9">
                                        <input type="username" asp-for="username" class="form-control transparent" placeholder="Kullanıcı adınızı giriniz...">
                                        <span asp-validation-for="username" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="text-center form-control-static">
                                    <label class="col-sm-3 control-label">Şifre:</label>
                                    <div class="col-sm-9">
                                        <input type="password" asp-for="password" class="form-control transparent" placeholder="Şifreniz giriniz...">
                                        <span asp-validation-for="password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="text-left">
                                    <div class="col-sm-offset-3 col-sm-9">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox"> Beni Hatırla
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-center ">
                                    <div class="col-sm-offset-3 col-sm-9">
                                        <button type="submit" class="btn btn-danger btn-fill">Giriş Yap</button>
                                    </div>
                                </div>
                            </form>
                            <br />
                            <div class="text-center ">
                                <a asp-controller="PasswordChange" asp-action="ForgetPassword">Şifremi Unuttum</a> | <a asp-controller="Login" asp-action="SignUp">Hesabınız Yok mu?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/login/js/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="~/login/js/bootstrap.min.js" type="text/javascript"></script>
</body>
</html>
