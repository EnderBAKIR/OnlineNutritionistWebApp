@model List<Blog>
<section id="blog" class="parallax-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 text-center">
                <h2>BESLENME BLOĞU</h2>
                <p>Sağlıklı yaşam ve beslenme konularında uzman görüşleri ve güncel bilgiler.</p>
            </div>
            @foreach (var item in Model)
            {
                <div class="wow fadeInUp col-md-6 col-sm-12" data-wow-delay="0.9s">
                    <a href="/Blogs/BlogsDetails/@item.Id" class="blog-card-link">
                        <div class="blog-thumb">
                            <div class="blog-image">
                                <img src="/blogsimages/@item.CoverImage" alt="@item.Title" />
                                <div class="blog-image-overlay">
                                    <i class="fa fa-eye"></i>
                                    <span>Devamını Oku</span>
                                </div>
                            </div>
                            <span class="blog-date">@item.CreatedDate.ToString("dd MMMM yyyy")</span>
                            <h3 class="blog-title">@item.Title</h3>
                            <h5 class="blog-author">
                                <i class="fa fa-user-md"></i>
                                <span>@item.AppUser.Name @item.AppUser.Surname</span>
                            </h5>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>

<style>
#blog {
    background: #ffffff;
    padding: 100px 0;
    color: #333;
}

#blog h2 {
    font-size: 48px;
    color: #333;
    margin-bottom: 20px;
}

#blog p {
    font-size: 18px;
    color: #666;
    margin-bottom: 50px;
}

.blog-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
    transition: all 0.3s ease;
}

.blog-card-link:hover {
    text-decoration: none;
    color: inherit;
    transform: translateY(-10px);
}

.blog-thumb {
    background: #ffffff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    margin-bottom: 30px;
}

.blog-card-link:hover .blog-thumb {
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    transform: translateY(-5px);
}

.blog-image {
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;
    border-radius: 10px;
    margin-bottom: 15px;
}

.blog-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 0.3s ease;
}

.blog-card-link:hover .blog-image img {
    transform: scale(1.05);
}

.blog-image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(67, 65, 107, 0.8);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: all 0.3s ease;
    color: white;
}

.blog-card-link:hover .blog-image-overlay {
    opacity: 1;
}

.blog-image-overlay i {
    font-size: 2.5rem;
    margin-bottom: 10px;
    animation: pulse 2s infinite;
}

.blog-image-overlay span {
    font-size: 1.2rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
}

@@keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.1); }
    100% { transform: scale(1); }
}

.blog-date {
    font-size: 14px;
    color: #777;
    margin-bottom: 15px;
    display: block;
}

.blog-title {
    font-size: 22px;
    color: #333;
    margin-bottom: 10px;
    transition: all 0.3s ease;
}

.blog-card-link:hover .blog-title {
    color: #43416b;
}

.blog-author {
    font-size: 16px;
    color: #666;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
}

.blog-author i {
    font-size: 18px;
    color: #43416b;
    transition: all 0.3s ease;
}

.blog-card-link:hover .blog-author {
    color: #43416b;
}

.blog-card-link:hover .blog-author i {
    color: #2c3e50;
    transform: scale(1.1);
}

@@media (max-width: 768px) {
    .blog-header-content h2 {
        font-size: 36px;
    }
    
    .blog-header-content p {
        font-size: 16px;
    }
    
    .blog-image {
        height: 200px;
    }
    
    .blog-card-link:hover {
        transform: translateY(-5px);
    }
}
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var elements = document.querySelectorAll('.blog-thumb');
        elements.forEach(function (el, index) {
            setTimeout(function () {
                el.style.opacity = '1';
                el.style.transform = 'translateY(0)';
            }, index * 150);
        });
    });
</script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
<script>
    new WOW().init();
</script>
