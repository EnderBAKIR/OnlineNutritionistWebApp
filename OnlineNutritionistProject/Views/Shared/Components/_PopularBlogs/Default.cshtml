@model List<Blog>
<section id="blog" class="parallax-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 text-center">
                <h2>Fitness Blog</h2>
                <p>Lorem ipsum dolor sit amet, maecenas eget vestibulum justo.</p>
            </div>
            @foreach (var item in Model)
            {
                <div class="wow fadeInUp col-md-6 col-sm-12" data-wow-delay="0.9s">
                    <div class="blog-thumb">
                        <div class="blog-image">
                            <a asp-action="BlogsDetails" asp-controller="Blogs" asp-route-id="@item.Id"> <img src="/blogsimages/@item.CoverImage" alt="@item.Title" /></a>
                        </div>
                        <span class="blog-date">@item.Title / @item.CreatedDate</span>


                        <h3 class="blog-title">
                            <a >
                                @(item.Description.Length > 50
                                    ? item.Description.Substring(0, 50) + "..."
                                    : item.Description)
                            </a>
                        </h3>

                        <h5 id="blog-author">@item.AppUser.Name</h5>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- CSS -->
<style>
    /* Genel stil */
    #blog {
        background: url('path-to-your-background-image.jpg') no-repeat center center fixed;
        background-size: cover;
        padding: 100px 0;
        color: #fff;
    }

        #blog h2 {
            font-size: 48px;
            color: #ffffff;
            margin-bottom: 20px;
        }

        #blog p {
            font-size: 18px;
            color: #dddddd;
            margin-bottom: 50px;
        }

    /* Blog kart stili */
    .blog-thumb {
        background-color: rgba(255, 255, 255, 0.9); /* Beyaz yarı saydam arka plan */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        opacity: 0; /* Fade-in için başta görünmez yap */
        transform: translateY(20px); /* Başlangıçta aşağıda */
    }

    /* Resimlerin uyumlu görünmesi için stil */
    .blog-image {
        width: 100%;
        height: 200px; /* Resim yüksekliğini sabitleyin */
        overflow: hidden; /* Taşmaları gizle */
        border-radius: 10px; /* Köşeleri yuvarlat */
        margin-bottom: 15px;
        position: relative;
    }

        .blog-image img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Resmi kapsayıcıya göre ayarla ve kes */
            position: absolute;
            top: 0;
            left: 0;
        }

    .blog-date {
        font-size: 14px;
        color: #777;
        margin-bottom: 15px;
    }

    .blog-title {
        font-size: 22px;
        color: #333;
        margin-bottom: 10px;
    }

        .blog-title a {
            color: #333;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .blog-title a:hover {
                color: #e74c3c;
            }

    #blog-author {
        font-size: 16px;
        color: #666;
    }
</style>

<!-- JS -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var elements = document.querySelectorAll('.blog-thumb');
        elements.forEach(function (el, index) {
            setTimeout(function () {
                el.style.opacity = '1';
                el.style.transform = 'translateY(0)';
            }, index * 150); // Geçişi sırayla uygular
        });
    });
</script>

<!-- WOW.js ve animate.css için scriptler -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
<script>
    new WOW().init();
</script>
