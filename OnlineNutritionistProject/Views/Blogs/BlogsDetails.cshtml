@model Blog
@{
    ViewData["Title"] = "Blog Detayları";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f8f9fa;
        color: #333;
    }

    .blog-container {
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 40px;
        margin-top: 50px;
        margin-bottom: 50px;
    }

    .blog-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .blog-title {
        font-size: 2.5rem;
        color: #2c3e50;
        margin-bottom: 10px;
    }

    .blog-meta {
        font-size: 0.9rem;
        color: #7f8c8d;
    }

    .blog-content {
        font-size: 1.1rem;
        line-height: 1.8;
    }

    .blog-image {
        width: 100%;
        border-radius: 10px;
        margin: 20px 0;
    }

    .author-section {
        display: flex;
        align-items: center;
        background-color: #e8f5e9;
        padding: 20px;
        border-radius: 10px;
        margin: 30px 0;
    }

    .author-image {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        margin-right: 20px;
    }

    .comment-section {
        margin-top: 40px;
    }

    .comment {
        background-color: #f5f5f5;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .comment-header {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

    .comment-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin-right: 15px;
    }

    .btn-like {
        background-color: #3498db;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-like:hover {
            background-color: #2980b9;
        }

        .btn-like.liked {
            background-color: #e74c3c;
        }

            .btn-like.liked:hover {
                background-color: #c0392b;
            }

    .sidebar-section {
        background-color: #ffffff;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 30px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

    .sidebar-title {
        font-size: 1.2rem;
        color: #2c3e50;
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 2px solid #ecf0f1;
    }

    .pinned-comment {
        border-left: 5px solid #ffd700;
    }
</style>

<div class="container blog-container">
    <div class="row">
        <div class="col-lg-8">
            <article class="blog-content">
                <header class="blog-header">
                    <h1 class="blog-title">@Model.Title</h1>
                    <div class="blog-meta">
                        <span><i class="far fa-calendar-alt"></i> @Model.CreatedDate.ToString("dd MMMM yyyy")</span>
                        <span><i class="far fa-heart"></i> <span id="likeCount">@ViewBag.LikeCount</span> Beğeni</span>
                        <span><i class="far fa-user"></i> @Model.AppUser.Name @Model.AppUser.Surname</span>
                    </div>
                </header>

                <img src="/blogsimages/@Model.CoverImage" alt="Blog Cover" class="blog-image">

                <p>@Html.Raw(Model.Content)</p>
                <blockquote>
                    Sağlıklı beslenme, sadece ne yediğinizle değil, nasıl yediğinizle de ilgilidir. Yemek zamanlarınızı özenle planlayın ve her lokmanın tadını çıkarın.
                </blockquote>

                
                <div class="author-section">
                    <img src="/memberimages/@Model.AppUser.ImageUrl" alt="@Model.AppUser.Name @Model.AppUser.Surname" class="author-image">
                    <div class="author-info">
                        <h4>@Model.AppUser.Name @Model.AppUser.Surname</h4>
                        <p>Uzman Diyetisyen</p>
                    </div>
                </div>

                <div class="blog-like">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <button id="likeButton" class="btn btn-like @(ViewBag.UserLikeStatus == true ? "liked" : "")" data-blog-id="@Model.Id">
                            <i class="fas fa-thumbs-up"></i> <span id="likeButtonText">@(ViewBag.UserLikeStatus == true ? "Beğendin" : "Beğen")</span>
                        </button>
                    }
                    else
                    {
                        <a href="/SignIn/SignIn" class="btn btn-primary">Beğenmek için giriş yapın</a>
                    }
                </div>

                <div class="comment-section" id="commentSection">
                    <h3>Yorumlar</h3>
                    @foreach (var comment in Model.Comments.OrderByDescending(c => c.PinnetComment).ThenByDescending(c => c.CreatedDate))
                    {
                        <div class="comment @(comment.PinnetComment ? "pinned-comment" : "")" id="comment-@comment.Id">
                            <div class="comment-header">
                                <img src="/memberimages/@(comment.AppUser?.ImageUrl ?? "default-avatar.jpg")" class="comment-avatar" alt="@comment.AppUser?.Name">
                                <div class="comment-info">
                                    <h5>@(comment.AppUser?.Name ?? "Anonim") @(comment.AppUser?.Surname ?? "")</h5>
                                    <span class="date">@comment.CreatedDate.ToString("dd MMM yyyy")</span>
                                </div>
                            </div>
                            <div class="comment-content">
                                <p>@comment.CommentContent</p>
                            </div>
                            @if (User.Identity.IsAuthenticated && Model.AppUserId == ViewBag.AppUserId)
                            {
                                <button class="btn @(comment.PinnetComment ? "btn-warning" : "btn-info") btn-sm pin-comment" data-comment-id="@comment.Id">
                                    @(comment.PinnetComment ? "Sabitlemeyi Kaldır" : "Yorumu Sabitle")
                                </button>
                            }
                        </div>
                    }
                </div>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="comment-form">
                        <h4>Yorum Yap</h4>
                        <form id="commentForm" method="post">
                            <input type="hidden" name="BlogId" value="@Model.Id" />
                            <input type="hidden" name="AppUserId" value="@ViewBag.AppUserId" />
                            <div class="form-group">
                                <textarea name="CommentContent" class="form-control" placeholder="Yorumunuzu buraya yazın..." required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Yorum Gönder</button>
                        </form>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        Yorum yapabilmek için <a href="/SignIn/SignIn">giriş yapmalısınız</a>.
                    </div>
                }
            </article>
        </div>
        <div class="col-lg-4">
            <aside class="sidebar">
                <div class="sidebar-section">
                    <h3 class="sidebar-title">Son Kitaplar</h3>
                    @await Component.InvokeAsync("_LastBooks")
                </div>
                <div class="sidebar-section">
                    <h3 class="sidebar-title">Son Bloglar</h3>
                    @await Component.InvokeAsync("_LastBlogs")
                </div>
            </aside>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#commentForm').submit(function (e) {
            e.preventDefault();
            $.ajax({
                url: '@Url.Action("AddCommentAjax", "Blogs")',
                type: 'POST',
                data: $(this).serialize(),
                success: function (response) {
                    if (response.success) {
                        var newComment = `
                                            <div class="comment" id="comment-${response.commentId}">
                                                <div class="comment-header">
                                                    <img src="/memberimages/${response.userImage}" class="comment-avatar" alt="${response.userName}">
                                                    <div class="comment-info">
                                                        <h5>${response.userName}</h5>
                                                        <span class="date">${response.commentDate}</span>
                                                    </div>
                                                </div>
                                                <div class="comment-content">
                                                    <p>${response.commentContent}</p>
                                                </div>
                                            </div>`;
                        $('#commentSection').append(newComment);
                        $('#commentForm textarea').val('');
                    }
                }
            });
        });

        $('#likeButton').click(function () {
            var blogId = $(this).data('blog-id');
            $.ajax({
                url: '@Url.Action("ToggleLikeAjax", "Blogs")',
                type: 'POST',
                data: { blogId: blogId },
                success: function (response) {
                    if (response.success) {
                        $('#likeCount').text(response.likeCount);
                        $('#likeButton').toggleClass('liked');
                        var buttonText = $('#likeButton').hasClass('liked') ? 'Beğendin' : 'Beğen';
                        $('#likeButtonText').text(buttonText);
                    }
                }
            });
        });

        $('.pin-comment').click(function () {
            var commentId = $(this).data('comment-id');
            var button = $(this);
            $.ajax({
                url: '@Url.Action("PinCommentAjax", "Blogs")',
                type: 'POST',
                data: { id: commentId },
                success: function (response) {
                    if (response.success) {
                        var comment = button.closest('.comment');
                        if (response.isPinned) {
                            comment.addClass('pinned-comment');
                            button.text('Sabitlemeyi Kaldır').removeClass('btn-info').addClass('btn-warning');
                            $('#commentSection').prepend(comment);
                        } else {
                            comment.removeClass('pinned-comment');
                            button.text('Yorumu Sabitle').removeClass('btn-warning').addClass('btn-info');
                        }
                    }
                }
            });
        });
    });
</script>
