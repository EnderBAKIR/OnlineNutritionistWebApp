@model AppUser
@{
    ViewData["Title"] = "Index";
    
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    /* Konteyner stili */
    .container {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    /* Başlık stili */
    h1 {
        font-size: 24px;
        margin-bottom: 20px;
        color: #333;
    }

  

    /* Etiket stili */
    label {
        font-size: 16px;
        margin-bottom: 8px;
        color: #555;
    }

  

  

    /* Gönder düğmesi stili */
    button {
        padding: 10px 20px;
        font-size: 16px;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        button:hover {
            background-color: #0056b3;
        }
</style>

<div class="container">

    <h1>Sertifika Yükleme</h1>
    <form method="post" asp-action="Index" asp-controller="NutritionistCertificate" enctype="multipart/form-data">
        <label for="certificate">Sertifika Dosyası (PDF, JPG, PNG):</label>
        <input type="file" asp-for="CertificateImage" >

        <button type="submit">Yükle</button>
    </form>
</div>
