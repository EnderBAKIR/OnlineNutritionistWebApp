@model ResetPasswordViewModel

@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    body {
        background-color: #f0f0f0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
    }

    .container {
        text-align: center;
    }

    .form-control {
        width: 300px;
        margin: 0 auto;
    }
</style>

<div class="container">
    <h2>Şifre Yenileme Sayfası</h2>
    <br />
    <form method="post">
        <label>Şifrenizi Giriniz</label>
        <input type="text" class="form-control" asp-for="Password" />
        <br />

        <label>Şifrenizi Tekrar Giriniz</label>
        <input type="text" class="form-control" asp-for="ConfirmPassword" />
        <br />

        <button class="btn btn-success">Güncelle</button>
    </form>
    <br />
    <div class="col-md-12  text-center">
        <p style="font-size: 12px; font-weight: bold; color: black;">&copy; 2024 OnlineNutri  Tüm hakları saklıdır.</p>
    </div>
</div>