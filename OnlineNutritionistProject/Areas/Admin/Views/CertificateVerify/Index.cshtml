@model List<AppUser>
@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">İsim</th>
            <th scope="col">Soyİsim</th>
            <th scope="col">Kullanıcı Adı</th>
            <th scope="col">Sertifika İndir  </th>
            <th scope="col">Diyetisyenlik Durumunu Değiştir </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.UserName</td>
                @if (item.CertificateImage != null)
                {
                    <td><a href="@Url.Action("DownloadCertificate", "CertificateVerify", new { certificateName = item.CertificateImage })" class="btn btn-success">Cvyi İndir</a></td>
                }
                else
                {
                    <td>Sertifika bulunamadı</td>
                }
                @if (item.CertificateImage != null)
                {
                    @if (item.Status == true)
                    {
                        <td>Diyetisyen Zaten Onaylı</td>
                    }

                    else
                    {
                        <td><a asp-area="Admin" asp-action="VerifyCertificate" asp-controller="CertificateVerify" asp-route-id="@item.Id">Diyetisyeni Doğrula</a></td>
                        <td><a asp-area="Admin" asp-action="DeleteCertificate" asp-controller="CertificateVerify" asp-route-id="@item.Id">Sertifikayı Sil</a></td>

                    }
                }

                else
                {
                    <td>Diyetisyenin Sertifikası yok</td>
                }
            </tr>
        }


    </tbody>
</table>

