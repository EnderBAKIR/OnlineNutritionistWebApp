@model List<Association>
@{
    ViewData["Title"] = "ListAssociation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title border-solid">Dernekler</h4>
                </div>
                <table class="table table-bordered" style="text-align: center; vertical-align: middle;">
                    <tr>
                        <th>
                            Adı
                        </th>
                        <th>
                            Bağış Linki
                        </th>
                        <th>
                            İşlemler
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                @item.WebUrl
                            </td>
                            <td>
                                <a href="" class="btn btn-outline-info">Sitede Gör</a>

                                <a asp-area="Admin" asp-controller="Association" asp-action="EditAssociation" asp-route-id="@item.Id" class=" btn btn-outline-warning">Düzenle</a>

                                <a asp-area="Admin" asp-controller="Association" asp-action="RemoveAssociation" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a>
                            </td>
                        </tr>
                    }
                </table>
                <a asp-area="Admin" asp-controller="Association" asp-action="AddAssociation" class="btn btn-outline-success">Ekle</a>
            </div>
        </div>
    </div>
</div>


