@model List<Consultancy>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NutritionistLayout.cshtml";
}


<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Danışmanlık Sayfanız</h4>
                </div>

                <table class="table table-bordered" style="text-align: center; vertical-align: middle;">

                    <tr>
                        <th>
                            Başlık
                        </th>
                        <th>
                            Oluşturulma Tarihi
                        </th>
                        <th>
                            Sil
                        </th>
                    </tr>


                    @foreach (var item in Model)
                    {


                        <tr>
                            <td>
                                @item.Description
                            </td>
                            <td>
                                @item.CreatedDate.ToString("dd-MMMM-yyyy")
                            </td>
                            <td>
                                <a href="/Nutritionist/Consultancy/DeleteConsultancy/@item.Id" class="btn btn-outline-danger">Sil</a>
                            </td>
                        </tr>
                    }

                </table>


                @if (Model.Count == 0)
                {
                    <a href="/Nutritionist/Consultancy/AddConsultancy/" class="btn btn-outline-success">Danışmanlık Ver</a>
                }
                else
                {
                    <div class="text-center">
                        <h5>Daha fazla danışmanlık veremezsiniz.</h5>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
