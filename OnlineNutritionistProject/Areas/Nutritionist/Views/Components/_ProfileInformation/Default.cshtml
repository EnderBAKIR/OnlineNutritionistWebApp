<div class="main-panel">
    <div class="content">
        <div class="row g-4">
            <div class="col-lg-3 col-md-6 col-sm-12">
                <div class="card border-start border-4 border-success shadow-sm hover-lift">
                    <div class="card-header bg-success-soft py-3 border-bottom border-success">
                        <h6 class="card-title text-success mb-0">Kapasite</h6>
                    </div>
                    <div class="card-body py-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 bg-success-soft rounded-circle p-3 me-3">
                                <i class="nc-icon nc-globe text-success fs-4"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h4 class="mb-0 fw-bold text-dark">150GB</h4>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0 pt-0">
                        <small class="text-muted">
                            <i class="fa fa-refresh me-1"></i>Şimdi Güncelle
                        </small>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12">
                <div class="card border-start border-4 border-success shadow-sm hover-lift">
                    <div class="card-header bg-success-soft py-3 border-bottom border-success">
                        <h6 class="card-title text-success mb-0">Gelir</h6>
                    </div>
                    <div class="card-body py-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 bg-success-soft rounded-circle p-3 me-3">
                                <i class="nc-icon nc-money-coins text-success fs-4"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h4 class="mb-0 fw-bold text-dark">$ 1,345</h4>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0 pt-0">
                        <small class="text-muted">
                            <i class="fa fa-calendar-o me-1"></i>Son Gün
                        </small>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12">
                <div class="card border-start border-4 border-danger shadow-sm hover-lift">
                    <div class="card-header bg-danger-soft py-3 border-bottom border-danger">
                        <h6 class="card-title text-danger mb-0">Hatalar</h6>
                    </div>
                    <div class="card-body py-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 bg-danger-soft rounded-circle p-3 me-3">
                                <i class="nc-icon nc-vector text-danger fs-4"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h4 class="mb-0 fw-bold text-dark">23</h4>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0 pt-0">
                        <small class="text-muted">
                            <i class="fa fa-clock-o me-1"></i>Son Saat
                        </small>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12">
                <div class="card border-start border-4 border-primary shadow-sm hover-lift">
                    <div class="card-header bg-primary-soft py-3 border-bottom border-primary">
                        <h6 class="card-title text-primary mb-0">Takipçiler</h6>
                    </div>
                    <div class="card-body py-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 bg-primary-soft rounded-circle p-3 me-3">
                                <i class="nc-icon nc-favourite-28 text-primary fs-4"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h4 class="mb-0 fw-bold text-dark">+45K</h4>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0 pt-0">
                        <small class="text-muted">
                            <i class="fa fa-refresh me-1"></i>Şimdi Güncelle
                        </small>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card border-start border-4 border-success shadow-sm">
                    <div class="card-header bg-success-soft py-3 border-bottom border-success">
                        <div class="d-flex align-items-center">
                            <i class="nc-icon nc-single-02 text-success me-3 fs-4"></i>
                            <h5 class="card-title text-success mb-0">Profil Bilgileriniz</h5>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="flex-shrink-0 bg-success-soft rounded-circle p-2 me-3">
                                        <i class="nc-icon nc-badge text-success"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block mb-1">Kullanıcı Adı</small>
                                        <h6 class="mb-0 fw-bold">@(string.IsNullOrEmpty(ViewBag.userName) ? "Belirtilmemiş" : ViewBag.userName)</h6>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center mb-3">
                                    <div class="flex-shrink-0 bg-success-soft rounded-circle p-2 me-3">
                                        <i class="nc-icon nc-single-02 text-success"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block mb-1">Ad Soyad</small>
                                        <h6 class="mb-0 fw-bold">@(string.IsNullOrEmpty(ViewBag.name) ? "Belirtilmemiş" : ViewBag.name)</h6>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0 bg-success-soft rounded-circle p-2 me-3">
                                        <i class="nc-icon nc-mobile text-success"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block mb-1">Telefon</small>
                                        <h6 class="mb-0 fw-bold">@(string.IsNullOrEmpty(ViewBag.phone) ? "Belirtilmemiş" : ViewBag.phone)</h6>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="flex-shrink-0 bg-success-soft rounded-circle p-2 me-3">
                                        <i class="nc-icon nc-email-85 text-success"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block mb-1">E-posta Adresi</small>
                                        <h6 class="mb-0 fw-bold">@(string.IsNullOrEmpty(ViewBag.email) ? "Belirtilmemiş" : ViewBag.email)</h6>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center mb-3">
                                    <div class="flex-shrink-0 bg-success-soft rounded-circle p-2 me-3">
                                        <i class="nc-icon nc-pin-3 text-success"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block mb-1">Konum</small>
                                        <h6 class="mb-0 fw-bold">@(string.IsNullOrEmpty(ViewBag.city) ? "Belirtilmemiş" : ViewBag.city)</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @{
            int blogLikeCount = ViewBag.BlogLikeCount ?? 0;
            int bookDownloadCount = ViewBag.BookDownloadCount ?? 0;
        }

        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card border-start border-4 border-dark-blue shadow-sm hover-card">
                    <div class="card-header bg-dark-blue-soft py-3 border-bottom border-dark-blue">
                        <h5 class="card-title text-dark-blue mb-0">Blog İstatistikleri</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0 bg-dark-blue-soft rounded-circle p-2 me-3">
                                        <i class="nc-icon nc-favourite-28 text-dark-blue"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Blog Beğenileri</small>
                                        <h6 class="mb-0 fw-bold">@blogLikeCount</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-center mt-2">
                            <small class="text-muted">Toplam Blog Etkileşimi</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card border-start border-4 border-dark-blue shadow-sm hover-card">
                    <div class="card-header bg-dark-blue-soft py-3 border-bottom border-dark-blue">
                        <h5 class="card-title text-dark-blue mb-0">Kitap İstatistikleri</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0 bg-dark-blue-soft rounded-circle p-2 me-3">
                                        <i class="nc-icon nc-book-bookmark text-dark-blue"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Kitap İndirmeleri</small>
                                        <h6 class="mb-0 fw-bold">@bookDownloadCount</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-center mt-2">
                            <small class="text-muted">Toplam Kitap Etkileşimi</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-success-soft {
        background-color: rgba(76, 175, 80, 0.1) !important;
    }
    .hover-lift {
        transition: transform 0.3s ease;
    }
    .hover-lift:hover {
        transform: translateY(-10px);
    }
    .bg-primary-soft {
        background-color: rgba(33, 150, 243, 0.1) !important;
    }
    .bg-info-soft {
        background-color: rgba(3, 169, 244, 0.1) !important;
    }
    :root {
        --dark-blue: #1a237e;  /* Koyu mavi renk */
        --dark-blue-soft: rgba(26, 35, 126, 0.1);  /* Yumuşak arka plan rengi */
    }
    .border-dark-blue { border-color: var(--dark-blue) !important; }
    .text-dark-blue { color: var(--dark-blue) !important; }
    .bg-dark-blue-soft { background-color: var(--dark-blue-soft) !important; }
    
    .hover-card {
        transition: all 0.3s ease;
        transform-origin: center;
    }
    
    .hover-card:hover {
        transform: scale(1.05);
        box-shadow: 0 15px 30px rgba(26, 35, 126, 0.2) !important;
        z-index: 10;
    }
</style>
